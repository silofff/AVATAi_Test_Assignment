<?xml version="1.0" encoding="utf-8"?>

<ContentPage
    x:Class="AVATAi.Views.StudentDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:AVATAi.Core.ViewModels;assembly=AVATAi.Core"
    Shell.TabBarIsVisible="False"
    x:DataType="viewModels:StudentDetailPageViewModel"
    Title="Student Details">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="{Binding Name}" FontSize="24" TextColor="Black" />
        <Label Text="{Binding Info}" FontSize="18" TextColor="Gray" />
    </VerticalStackLayout>
</ContentPage>
